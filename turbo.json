{
  "$schema": "https://turborepo.dev/schema.json",
  "globalEnv": ["JWT_SECRET", "DATABASE_URL", "OPENAI_API_KEY"],
  "tasks": {
    "build": { "dependsOn": ["^build"], "outputs": ["dist/**", ".next/**"] },
    "dev": { "cache": false, "persistent": true },
    "lint": {},
    "test": { "dependsOn": ["^test"], "outputs": [] },
    "check-types": { "outputs": [] }
  }
}
