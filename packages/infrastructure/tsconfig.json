{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ESNext",
      "moduleResolution": "Bundler",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "types": ["node"],
      "outDir": "dist",
      "rootDir": "..",
      "baseUrl": ".",
      "paths": {
        "@trekmind/domain": ["../domain/src"],
        "@trekmind/application": ["../application/src"]
      }
    },
    "include": ["src", "drizzle.config.ts"],
    "exclude": ["node_modules", "dist"]
  }