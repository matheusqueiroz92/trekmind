{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    "outDir": "dist",
    "rootDir": "..",

    "baseUrl": ".",
    "paths": {
      "@trekmind/domain": ["../domain/src"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}